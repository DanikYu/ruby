<h1>Listing cities</h1>

<table class='table'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Total hotels</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cities.each do |city| %>
      <tr>
        <td><%= city.name %></td>
        <td><%= city.hotels.count %></td>
        <td><%= link_to 'Details', city %></td>
        <td><%= link_to 'Edit city', edit_city_path(city) %></td>
        <td><%= link_to 'Destroy city', city, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

